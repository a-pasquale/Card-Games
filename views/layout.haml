  %head
    %title Double Down
    %link{ :rel => "stylesheet", :href => "/styles.css", :type => "text/css"}
  %body
    #wrap
      #header
        #innerheader
          #title
            %h1 Double Down          
            %h2 A blackjack Game
      #content
        #page
          #innerpage    
            .hand
              -# Player's hand
              %h2 Your hand:
              -@my_hand.cards.each do |card|
                %img(src="/images/75/#{card.name}")
            #actions
            -if @blackjack
              %h2 Blackjack!
              %a{:href => '/blackjack'} Play again?
            -else
              = yield

